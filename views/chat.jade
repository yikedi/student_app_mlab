extends layout

block style
    style.
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font: 13px Helvetica, Arial;
        }


        form {
            background: #000;
            padding: 3px;
            position: fixed;
            bottom: 0;
            width: 100%;
            float:right;
            alignment:right;
            clear:top;
        }

        form input {
            border: 0;
            padding: 10px;
            width: 90%;
            margin-right: .5%;
        }

        form button {
            width: 9%;
            background: rgb(130, 224, 255);
            border: none;
            padding: 10px;
        }

        #messages {
            width:30%;
            list-style-type: none;
            margin: 0;
            padding: 0;
            float:right;
            clear:top
        }

        #messages li {
            padding: 5px 10px;
        }

        #messages li:nth-child(odd) {
            background: #eee;
        }

        #map {
            float:left;
            height: 700px;
            width: 70%;
        }

block content

    #map

    ul#messages
    form(action='')
        input#m(autocomplete="off")
        button Send

    a(href='/users/logout') log out

block script
    script(src="http://code.jquery.com/jquery-3.2.1.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/socket.io/2.0.3/socket.io.js")
    script(async='', defer = '', src = 'https://maps.googleapis.com/maps/api/js?key=AIzaSyBtNQ3rNUC9SS_5z3sdzHZz7ndGrgXIxBM&callback=initMap')

    script.
        var socket=io()
        var user_color=getRandomColor();
        var chatmap;
        $('form').submit(function () {

            var pos;
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(function (position) {
                        pos = {
                        lat: position.coords.latitude,
                        lng: position.coords.longitude
                    };
                })
            }

            var user = !{JSON.stringify(user)};
            var username = user.username;

            socket.emit('chat',
                {text:$('#m').val(),
                 username:username,
                 pos:pos,
                 color:user_color}
                );
            $('#m').val('');
            return false;

        })
        socket.on('chat broadcast', function (input) {
            txt=input.text;
            color=input.color;
            username=input.username;
            pos=input.pos;
            if (navigator.geolocation){
                navigator.geolocation.getCurrentPosition(function (position) {
                    var pos = {
                        lat: position.coords.latitude,
                        lng: position.coords.longitude
                    };
                })
            }

            var msg=username+": "+txt;
            $('#messages').append($('<li>').text(msg).css('color',color));

        })

        function getRandomColor() {
            var letters = '0123456789ABCDEF';
            var color = '#';
            for (var i = 0; i < 6; i++) {
                color += letters[Math.floor(Math.random() * 16)];
            }
            return color;
        }

        function initMap() {
            var map = new google.maps.Map(document.getElementById('map'), {
                center: {lat: -34.397, lng: 150.644},
                zoom: 6
            });
            var infoWindow = new google.maps.InfoWindow({map: map});

            // Try HTML5 geolocation.
            if (navigator.geolocation) {
                navigator.geolocation.getCurrentPosition(function (position) {
                    var pos = {
                        lat: position.coords.latitude,
                        lng: position.coords.longitude
                    };

                    infoWindow.setPosition(pos);
                    infoWindow.setContent('Location found.');
                    map.setCenter(pos);
                    chatmap=map;
                    set_markers(map);

                }, function () {
                    handleLocationError(true, infoWindow, map.getCenter());
                });
            } else {
                // Browser doesn't support Geolocation
                handleLocationError(false, infoWindow, map.getCenter());
            }
        }

        function set_markers(map) {
            var ulist = !{JSON.stringify(user_list)};

            for (i in ulist) {
                var u = ulist[i];
                var photo = u.photo;
                var online = u.online;
                //var position=pos_list[i];
                var position = u.position;

                var image = {
                    url: photo,
                    size: new google.maps.Size(50, 50),
                    origin: new google.maps.Point(0, 0),
                    anchor: new google.maps.Point(0, 50)
                }
                var opacity = 1;
                if (!online) {
                    opacity = 0.5;
                }

                var user_marker = new google.maps.Marker({
                    position: position,
                    map: map,
                    icon: image,
                    opacity: opacity
                })
            }
        }
        script(async = '', defer = '', src = 'https://maps.googleapis.com/maps/api/js?key=AIzaSyBtNQ3rNUC9SS_5z3sdzHZz7ndGrgXIxBM&callback=initMap')






